
{
  "compilerOptions": {
    "allowJs": true,
    "target": "ES2020",
    "rootDir": "./src",
    "outDir": "./build",
    "module": "commonjs",
    "strict": true,
    "removeComments": true,
    "esModuleInterop": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,

  },
  "exclude": [
    "./node_modules",
    "__tests__"
  ],
  "include": [
    "./src"
  ]
 }
